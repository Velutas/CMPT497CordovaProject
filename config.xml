<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Simone.SideTracked" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SideTracked</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
	<preference name="SplashScreen" value="screen"/>
	<preference name="SplashScreenDelay" value="10000"/>
        <allow-intent href="market:*" />
		
		<splash src="res/screen/android/HDPI_SPLASHLAND.png" density="land-hdpi"/>
		<splash src="res/screen/android/LDPI_SPLASHLAND.png" density="land-ldpi"/>
		<splash src="res/screen/android/MDPI_SPLASHLAND.png" density="land-mdpi"/>
		<splash src="res/screen/android/XHDPI_SPLASHLAND.png" density="land-xhdpi"/>

		<splash src="res/screen/android/HDPI_SPLASH.png" density="port-hdpi"/>
		<splash src="res/screen/android/LDPI_SPLASH.png" density="port-ldpi"/>
		<splash src="res/screen/android/MDPI_SPLASH.png" density="port-mdpi"/>
		<splash src="res/screen/android/XHDPI_SPLASH.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
